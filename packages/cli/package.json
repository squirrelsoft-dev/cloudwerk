{
  "name": "@cloudwerk/cli",
  "version": "0.0.3",
  "description": "Dev server, build, deploy commands for Cloudwerk",
  "type": "module",
  "bin": {
    "cloudwerk": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "@cloudwerk/core": "workspace:^",
    "@hono/node-server": "^1.13.0",
    "commander": "^12.1.0",
    "esbuild": "^0.24.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "hono": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
