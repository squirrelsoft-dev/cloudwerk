{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "baseUrl": ".",
    "paths": {
      "@cloudwerk/core/bindings": ["./.cloudwerk/types/bindings.d.ts"],
      "@cloudwerk/core/context": ["./.cloudwerk/types/context.d.ts"]
    }
  },
  "include": [".cloudwerk/types/**/*", "app/**/*", "cloudwerk.config.ts"]
}
