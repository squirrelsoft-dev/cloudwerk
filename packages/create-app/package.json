{
  "name": "@cloudwerk/create-app",
  "version": "0.2.0",
  "description": "Create a new Cloudwerk app",
  "repository": {
    "type": "git",
    "url": "https://github.com/squirrelsoft-dev/cloudwerk.git",
    "directory": "packages/create-app"
  },
  "type": "module",
  "bin": {
    "create-cloudwerk-app": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "template-hono-jsx",
    "template-react",
    "template-api"
  ],
  "scripts": {
    "prebuild": "node scripts/generate-versions.js",
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "node scripts/generate-versions.js && tsup src/index.ts --format esm --dts --watch",
    "pretest": "node scripts/generate-versions.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.0.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
