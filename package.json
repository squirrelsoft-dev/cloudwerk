{
  "name": "cloudwerk",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @cloudwerk/cli dev",
    "build": "pnpm -r --filter '!./examples/**' build",
    "test": "pnpm -r test",
    "test:e2e": "vitest --config e2e/vitest.config.ts --run",
    "validate:spike": "./scripts/validate-spike.sh",
    "lint": "eslint . --ignore-pattern 'examples/**'",
    "format": "prettier --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm -r build && changeset publish --no-git-tag",
    "release:provenance": "pnpm -r build && pnpm -r publish --access public --provenance --no-git-checks"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^8.57.0",
    "@types/node": "^20",
    "eslint": "^8",
    "prettier": "^3",
    "typescript": "^5",
    "typescript-eslint": "^7.0.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
