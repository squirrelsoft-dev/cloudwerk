---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Developer Journey",
  description = "Follow a startup's evolution from a simple landing page to a full-stack edge applicationâ€”adding features one chapter at a time."
} = Astro.props;
---

<section class="journey-section" id="journey">
  <header class="journey-header">
    <h2 class="journey-title">{title}</h2>
    <p class="journey-description">{description}</p>
    <div class="scroll-hint">
      <span>Scroll to explore</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </div>
  </header>

  <div class="journey-scroll-container">
    <slot />
  </div>
</section>

<style>
  .journey-section {
    padding: 4rem 0 0;
    border-top: 1px solid var(--sl-color-hairline);
    margin: 3rem 0 0;
  }

  .journey-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 0 1rem;
  }

  .journey-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--sl-color-text);
    margin: 0 0 1rem;
    letter-spacing: -0.025em;
  }

  .journey-description {
    font-size: 1.125rem;
    color: var(--sl-color-text-accent);
    max-width: 600px;
    margin: 0 auto 1.5rem;
    line-height: 1.6;
  }

  .scroll-hint {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-text-accent);
    font-size: 0.875rem;
    animation: bounce 2s infinite;
  }

  .scroll-hint svg {
    opacity: 0.7;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(8px);
    }
    60% {
      transform: translateY(4px);
    }
  }

  .journey-scroll-container {
    position: relative;
  }

  @media (max-width: 768px) {
    .journey-title {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const steps = document.querySelectorAll('.journey-step');
    const dots = document.querySelectorAll('.stepper-dot');
    const progressBar = document.querySelector('.progress-bar') as HTMLElement;

    if (!steps.length) return;

    const observerOptions = {
      root: null,
      rootMargin: '-20% 0px -20% 0px',
      threshold: [0, 0.25, 0.5, 0.75, 1]
    };

    let currentIndex = 0;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const step = entry.target as HTMLElement;
        const index = Array.from(steps).indexOf(step);

        if (entry.isIntersecting && entry.intersectionRatio > 0.25) {
          // Update current step
          currentIndex = index;

          // Update stepper dots
          dots.forEach((dot, i) => {
            dot.classList.remove('active', 'completed');
            if (i === index) {
              dot.classList.add('active');
            } else if (i < index) {
              dot.classList.add('completed');
            }
          });

          // Update progress bar
          if (progressBar && dots.length > 1) {
            progressBar.style.width = `${(index / (dots.length - 1)) * 100}%`;
          }

          // Add visible class for animation
          step.classList.add('visible');
        }
      });
    }, observerOptions);

    steps.forEach((step) => {
      observer.observe(step);
    });

    // Handle dot clicks - smooth scroll to section
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        const targetStep = steps[index];
        if (targetStep) {
          targetStep.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    });
  });
</script>
